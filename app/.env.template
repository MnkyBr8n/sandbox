# Sandbox Snapshot Notebook Tool - Environment Configuration
# Copy this file to .env and update values for your environment
#
# IMPORTANT: Never commit .env files with real credentials to source control

# ==========================================
# REQUIRED - Database credentials (no defaults in code)
# ==========================================
POSTGRES_USER=sandbox
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=sandbox

# ==========================================
# REQUIRED - Database Connection String
# ==========================================
# Must be set - no default in code for security
SANDBOX_POSTGRES_DSN=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# ==========================================
# ENVIRONMENT & LOGGING
# ==========================================
SANDBOX_ENVIRONMENT=dev
# Options: dev, staging, production

SANDBOX_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

SANDBOX_LOG_JSON=false
# true = structured JSON logs (production)
# false = human-readable logs (development)

# ==========================================
# OPTIONAL - Paths (defaults provided in code)
# ==========================================
# SANDBOX_DATA_DIR=sandbox/data
# SANDBOX_UPLOADS_DIR=sandbox/data/uploads
# SANDBOX_REPOS_DIR=sandbox/data/repos
# SANDBOX_SCHEMAS_DIR=sandbox/schemas
# SANDBOX_NOTEBOOK_SCHEMA_PATH=sandbox/schemas/master_notebook_v2.yaml

# ==========================================
# OPTIONAL - Service Configuration
# ==========================================
# SANDBOX_HOST=0.0.0.0
# SANDBOX_PORT=8080

# ==========================================
# OPTIONAL - Git Clone Settings
# ==========================================
# SANDBOX_GIT_CLONE_TIMEOUT_SECONDS=600
# SANDBOX_GIT_MAX_CONCURRENT_CLONES=2

# ==========================================
# OPTIONAL - HTTP Settings
# ==========================================
# SANDBOX_HTTP_REQUEST_TIMEOUT_SECONDS=30

# ==========================================
# DATABASE PARTITION (optional)
# ==========================================
# SANDBOX_DB_PARTITION_KEY=project_id
