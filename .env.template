# Sandbox Snapshot Notebook Tool - Environment Configuration
# Copy this file to .env and update values for your environment

# Environment
SANDBOX_ENVIRONMENT=dev
# Options: dev, staging, production

# Database
SANDBOX_POSTGRES_DSN=postgresql+psycopg://sandbox:sandbox@localhost:5432/sandbox
# Format: postgresql+psycopg://user:password@host:port/database
# Docker: postgresql+psycopg://sandbox:sandbox@postgres:5432/sandbox

# Logging
SANDBOX_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

SANDBOX_LOG_JSON=false
# Set to true for structured JSON logs (production)
# Set to false for human-readable logs (development)

# Paths (optional - defaults provided)
# SANDBOX_DATA_DIR=sandbox/data
# SANDBOX_UPLOADS_DIR=sandbox/data/uploads
# SANDBOX_REPOS_DIR=sandbox/data/repos
# SANDBOX_SCHEMAS_DIR=sandbox/schemas

# Schema file (optional - defaults provided)
# SANDBOX_NOTEBOOK_SCHEMA_PATH=sandbox/schemas/master_notebook.yaml

# Service Configuration (optional)
# SANDBOX_HOST=0.0.0.0
# SANDBOX_PORT=8080

# Git Clone Settings (optional)
# SANDBOX_GIT_CLONE_TIMEOUT_SECONDS=300
# SANDBOX_GIT_MAX_CONCURRENT_CLONES=2

# Database Partition (optional)
# SANDBOX_DB_PARTITION_KEY=project_id
